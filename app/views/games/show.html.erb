<div class="board">
  <% @board.each do |assignment| %>
    <div class="card-in-play">
      <%= image_tag assignment.card.image_url %>
    </div>
  <% end %>
</div>

<div class="side-bar">
  <div class="timer-box">
    <div id="timer">00:00</div>
      <!-- <div class="controls"> -->
      <!-- <div class="btn" id="start">Start</div> -->
      <div class="btn" id="stop">Stop</div>
      <!-- <div class="btn" id="reset">Reset</div> -->
    </div>
  </div>

  <div class="sets-played">
    <h2>Sets Played:</h2>
    <% @game = Game.find_by_user_id(current_user.id) %>
      <% @game.card_sets.each do |set| %>
        <% set.cards.pluck(:image_url).each_slice(3) do |img| %>
          <table>
            <tr>
              <td> <%= image_tag img[0], class: "img_set_card" %></td>
              <td> <%= image_tag img[1], class: "img_set_card" %></td>
              <td> <%= image_tag img[2], class: "img_set_card" %></td>
            </tr>
          </table>
        <% end %>
      <% end %>
  </div>
</div>
