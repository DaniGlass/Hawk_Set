<!DOCTYPE html>
<html>
  <head>
    <title>HawkSet</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_user %>
      <div class="new-game">
        <%= form_for :game, url: { action: "create" } do |f| %>
          <%= f.submit 'New Game' %>
        <% end %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
