<!DOCTYPE html>
<html>
  <head>
    <title>HawkSet</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <div class="nav-bar">
      <% if user_signed_in? %>
        <%= current_user.username %>
        <!-- add My Account when its ready (Ikko) -->
        <a href="/">Home</a>
        <%= link_to "Logout", destroy_user_session_path, {method: :delete, class: 'butt'} %>
      <% else %>
        <a href="/"></a>
        <a href="/users/sign_in">Login</a>
      <% end %>
    </div>

    <% if user_signed_in? %>
      <div class="new-game">
        <%= form_for Game.new, url: games_path do |f| %>
          <%= f.submit 'New Game' %>
        <% end %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
